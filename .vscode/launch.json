{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server (depuración limpia)",
      "program": "${workspaceFolder}/servidor.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "runtimeArgs": ["--inspect=9229"],
      "stopOnEntry": false,
      "skipFiles": ["<node_internals>/**"],
      "autoAttachChildProcesses": false,
      "restart": false,
      "env": {
        "NODE_ENV": "development",
        "PORT": "3002"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Servidor backend corriendo en http://0.0.0.0:(\\d+)",
        "uriFormat": "http://localhost:%s/login"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Node (9229)",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome - inventario360 (3002)",
      "url": "http://127.0.0.1:3002/inventario360.html",
      "webRoot": "${workspaceFolder}/publico",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-profile",
      "runtimeArgs": ["--auto-open-devtools-for-tabs"]
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceFolder}/publico"
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack (Server + Chrome)",
      "configurations": ["Launch Server (depuración limpia)", "Launch Chrome - inventario360 (3002)"]
    }
  ]
}